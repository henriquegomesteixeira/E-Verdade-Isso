@{
    ViewData["Title"] = "Verificação de Notícia";
}

<h1 class="text-2xl font-bold mb-4">Verificar Notícia</h1>

<form method="post" class="space-y-4">
    <textarea name="texto" rows="5" class="w-full border p-2 rounded" placeholder="Cole aqui o texto ou link da notícia"></textarea>
    <button type="submit" class="bg-yellow-500 hover:bg-yellow-600 text-black px-4 py-2 rounded">Verificar</button>
</form>

@if (ViewBag.Resultado != null)
{
    <div class="mt-6 p-4 bg-gray-100 rounded shadow prose max-w-none">
        <h2 class="font-semibold mb-2">Resultado:</h2>
        @Html.Raw(ViewBag.Resultado)
    </div>
}

